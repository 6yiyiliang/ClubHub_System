/* pages/Sort/Sort.wxss */
page {
    background-color: #f5f5f5; /* 浅灰色背景 */
    height: 100%;
    width: 100%;
}
.message-container {
    display: flex;
    justify-content: center; /* 水平居中 */
    width: 95%;
    min-height: 60px; /* 让容器至少有一定的高度 */
    background-color: rgb(255, 255, 255);
    border-radius: 15px; /* 纠正rpx为px */
    
    /* 让容器在父级容器中水平居中 */
    margin: 0 auto;
}
.message-container-2 {
    display: flex;
    justify-content: center; /* 水平居中 */
    width: 95%;
    min-height: 60px; /* 让容器至少有一定的高度 */
    background-color: rgb(255, 255, 255);
    border-radius: 15px; /* 纠正rpx为px */
    
