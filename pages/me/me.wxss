/* pages/me/me.wxss */
.user-section {
    padding: 30rpx;
    background: linear-gradient(135deg, #7d9ce0, #68dab7);
    position: relative;
  }
  
  .user-main {
    display: flex;
    align-items: center;
    width: 100%;
  }
  
  .avatar {
    width: 140rpx;
    height: 140rpx;
    border-radius: 50%;
    margin-right: 30rpx;
    border: 4rpx solid rgba(255,255,255,0.2);
  }
  
  .user-meta {
    flex: 1;
  }
  
  .username {
    display: block;
    color: #fff;
    font-size: 40rpx;
    font-weight: 500;
    margin-bottom: 16rpx;
  }
  
  .button-container {
    margin-top: 30rpx;
    width: 100%;
  }
  
  .p {
    display: block;
  }
  
  .position {
    background: rgba(255,255,255,0.2);
    padding: 8rpx 20rpx;
    border-radius: 40rpx;
    color: #fff;
    font-size: 24rpx;
    display: inline-block;
    margin-bottom: 10rpx;
  }
  
  /* 菜单区域样式 */
  .menu-section {
    background-color: #fff;
    padding: 30rpx;
    margin-top: 20rpx;
    border-radius: 20rpx;
    box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.05);
  }
  
  .menu-title {
    font-size: 32rpx;
    font-weight: bold;
    color: #333;
    margin-bottom: 10rpx;
  }
  
  .menu-subtitle {
    font-size: 26rpx;
    color: #999;
    margin-bottom: 32rpx;
    padding-bottom: 20rpx;
    border-bottom: 1rpx solid #f5f5f5;
  }
  
  .menu-grid {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 30rpx;
  }
  
  .menu-item {
    display: flex;
    flex-direction: column;
    align-items: center;
    padding: 24rpx 0;
    border-radius: 16rpx;
    background-color: #f9f9f9;
    transition: all 0.3s ease;
  }

  .menu-item:active {
    background-color: #f0f0f0;
  }
  
  .menu-icon {
    width: 88rpx;
    height: 88rpx;
    margin-bottom: 16rpx;
  }
  
 .menu-item text {
  font-size: 28rpx;
  color: #555;
}

.about-section {
  background-color: #fff;
  padding: 32rpx;
  margin: 24rpx;
  border-radius: 24rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.05);
}
  
.about-title {
    font-size: 34rpx;
    font-weight: 600;
    color: #333;
    margin-bottom: 16rpx;
  }
  
  .about-content {
    font-size: 28rpx;
    color: #666;
    line-height: 1.6;
  }

  /* 新增垂直菜单样式 */
.vertical-menu {
    display: flex;
    flex-direction: column;
    gap: 20rpx;
    margin-top: 20rpx;
  }
  
  .menu-button {
    display: flex;
    align-items: center;
    padding: 28rpx 32rpx;
    background-color: #f9f9f9;
    border-radius: 16rpx;
    transition: all 0.3s ease;
  }
  
  .menu-button:active {
    background-color: #f0f0f0;
  }
  
  .menu-button .button-icon {
    width: 48rpx;
    height: 48rpx;
    margin-right: 24rpx;
  }
  
  .menu-button text {
    font-size: 30rpx;
    color: rgb(65, 65, 65);
  }

  .about-icon {
    width: 23px;
    height: 23px;
    margin-right: 5px;
    vertical-align: middle;
  }
  