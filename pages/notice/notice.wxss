/* pages/notice/notice.wxss */
.tab-item{
    position: relative;
    top: 10px; 
}  
  .result-list {
    background-color: #f0f0f0; 
    padding: 28rpx; 
    border-radius: 18rpx; 
    width: 85%; 
    margin: 0 auto 20rpx; 
  }
  .result-content {
    display: flex; 
    align-items: center; 
  }
  .result-image {
    width: 280rpx;
    height: auto; 
    margin-right: 20rpx; 
  }
  .result-info {
    flex: 1; 
  }
  .result-title {
    font-size: 30rpx;
    font-weight: bold;
    margin-bottom: 10rpx;
  }
  .result-field {
    font-size: 26rpx;
    color: #666;
    margin-bottom: 5rpx;
  }
  .image {
    margin-top: 10px;
  }
.time {
    font-size: 12px;
    color: #888;
    margin-left: auto;
    margin-top: -15px;
}