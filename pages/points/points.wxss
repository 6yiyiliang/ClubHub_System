/* pages/points/points.wxss */
.container {
    padding: 32rpx;
    background: linear-gradient(to bottom, #f0fdfa, #edfffb);
    min-height: 100vh;
  }
  
  /* 头部装饰样式 */
  .header-decor {
    display: flex;
    align-items: center;
    justify-content: center;
    margin-bottom: 40rpx;
  }
  
  .decor-line {
    height: 2rpx;
    width: 80rpx;
    background: linear-gradient(to right, transparent, #0d9488, transparent);
  }
  
  .header-title {
    margin: 0 30rpx;
    font-size: 36rpx;
    font-weight: bold;
    color: #0d9488;
    text-shadow: 0 2rpx 4rpx rgba(13, 148, 136, 0.2);
  }
  
  /* 排行榜样式 */
  .rank-list {
    margin-top: 24rpx;
  }
  
  .rank-item {
    position: relative;
    display: flex;
    align-items: center;
    background-color: #ffffff;
    border-radius: 24rpx;
    padding: 24rpx 32rpx;
    margin-bottom: 24rpx;
    box-shadow: 0 8rpx 20rpx rgba(0, 0, 0, 0.05);
    transition: all 0.3s ease;
  }
  
  .rank-item:active {
    transform: scale(0.98);
  }
  
  /* 排名数字样式 */
  .rank-number {
    width: 60rpx;
    text-align: center;
    font-size: 36rpx;
    font-weight: bold;
    color: #adb5bd;
    margin-right: 20rpx;
  }
  
  /* 前三名特殊样式 */
  .rank-1 .rank-number,
  .rank-2 .rank-number,
  .rank-3 .rank-number {
    color: #0d9488;
  }
  
  /* 头像样式 */
  .rank-avatar {
    width: 100rpx;
    height: 100rpx;
    border-radius: 50%;
    object-fit: cover;
    margin-right: 28rpx;
    border: 4rpx solid #e9ecef;
  }
  
  /* 前三名头像边框 */
  .rank-1 .rank-avatar {
    border-color: #ffd43b;
  }
  .rank-2 .rank-avatar {
    border-color: #ced4da;
  }
  .rank-3 .rank-avatar {
    border-color: #f97316;
  }
  
  /* 用户信息样式 */
  .rank-info {
    flex: 1;
    display: flex;
    flex-direction: column;
  }
  
  .rank-name {
    font-size: 34rpx;
    font-weight: 600;
    color: #343a40;
    margin-bottom: 6rpx;
  }
  
  .rank-detail {
    display: flex;
    align-items: center;
  }
  
  .rank-label {
    font-size: 26rpx;
    color: #868e96;
    margin-right: 12rpx;
  }
  
  .rank-score {
    font-size: 32rpx;
    font-weight: bold;
    color: #0d9488;
  }
  
  /* 前三名特殊背景 */
  .top-rank {
    background: linear-gradient(135deg, #f0fdfa, #ffffff);
    border-left: 8rpx solid;
    padding-left: 24rpx;
  }
  
  .rank-1 {
    border-left-color: #ffd43b;
  }
  .rank-2 {
    border-left-color: #ced4da;
  }
  .rank-3 {
    border-left-color: #f97316;
  }
  
  /* 奖牌样式 */
  .medal {
    width: 60rpx;
    height: 60rpx;
    position: absolute;
    right: 32rpx;
    top: 50%;
    transform: translateY(-50%);
  }

  .footer-decor text {
    position: relative;
    padding: 0 20rpx;
  }
  
  .footer-decor text::before,
  .footer-decor text::after {
    content: "";
    position: absolute;
    top: 50%;
    width: 60rpx;
    height: 1rpx;
    background: linear-gradient(to right, transparent, #adb5bd, transparent);
  }
  
  .footer-decor text::before {
    right: 100%;
  }
  
  .footer-decor text::after {
    left: 100%;
  }